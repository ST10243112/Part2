@{
    ViewData["Title"] = "Home";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EventEase | Plan with Confidence</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #ffffff;
            color: #333;
        }

        .hero {
            background: linear-gradient(to right, #4a90e2, #007bff);
            color: #fff;
            padding: 100px 0;
            text-align: center;
        }

            .hero h1 {
                font-size: 3.5rem;
                font-weight: 700;
            }

            .hero p {
                font-size: 1.3rem;
            }

        .btn-accent {
            background-color: #ffffff;
            color: #007bff;
            border: 2px solid #ffffff;
            transition: all 0.3s;
        }

            .btn-accent:hover {
                background-color: transparent;
                color: #ffffff;
            }

        footer {
            padding: 2rem 0;
            text-align: center;
            font-size: 0.9rem;
            color: #aaa;
        }
    </style>
</head>
<body>
    <header class="hero">
        <div class="container">
            <h1>Welcome to EventEase</h1>
            <p>Smart event planning and hassle-free bookings.</p>
            <a href="/Venue" class="btn btn-azure btn-lg mx-2">Venues</a>
            <a href="/Event" class="btn btn-azure btn-lg mx-2">Events</a>
            <a href="/Booking" class="btn btn-azure btn-lg mx-2">Bookings</a>
        </div>
    </header>

    <footer class="container">
        <p>&copy; @DateTime.Now.Year EventEase. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>